<Window x:Class="CalendarTask.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarTask"
        mc:Ignorable="d"
            Title="Календарь" Height="580" Width="400">
    <Grid>
        <StackPanel Margin="52,293,45,71" Name="EventsPanel">
        </StackPanel>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="52,513,0,0" VerticalAlignment="Top" Background="AntiqueWhite" Click="AddEvent_Click"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="163,513,0,0" VerticalAlignment="Top" Background="AntiqueWhite" Click="EditEvent_Click"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="274,513,0,0" VerticalAlignment="Top" Background="AntiqueWhite" Click="DeleteEvent_Click"/>
        <TextBox Name="EventDetails" Margin="48,73,48,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,27,0,0" TextWrapping="Wrap" Text="Планёр" FontSize="20" VerticalAlignment="Top"/>
        <Calendar Name="EventCalendar" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" Height="168" Width="180"/>
    </Grid>
</Window>